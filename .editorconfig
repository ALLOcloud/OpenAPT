root = true

[*]
charset = utf-8
end_of_line = lf

[*.{js,jsx,ts,tsx,css,scss,json,eslintrc,html}]
indent_size = 2
indent_style = space
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
indent_style = space
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile,rules}]
indent_size = 4
intent_style = tab
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true
