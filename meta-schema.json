{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "required": [
    "repositories",
    "mirrors",
    "snapshots",
    "publishings"
  ],
  "properties": {
    "repositories": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^.+$": {
          "type": "object",
          "properties": {
            "architectures": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "component": {
              "type": "string"
            },
            "distribution": {
              "type": "string"
            },
            "comment": {
              "type": "string"
            }
          }
        }
      }
    },
    "mirrors": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^.+$": {
          "type": "object",
          "properties": {
            "archive": {
              "type": "string"
            },
            "distribution": {
              "type": "string"
            },
            "components": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "architectures": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "filter": {
              "type": "string"
            },
            "filterWithDeps": {
              "type": "boolean"
            },
            "withSources": {
              "type": "boolean"
            },
            "withUdebs": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "publishings": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^.+$": {
          "oneOf": [
            {
              "type": "object",
              "required": [
                "snapshot"
              ],
              "properties": {
                "snapshot": {
                  "type": "string",
                  "pattern": "^.+$"
                }
              }
            }, {
              "type": "object",
              "required": [
                "repository"
              ],
              "properties": {
                "repository": {
                  "type": "string",
                  "pattern": "^.+$"
                }
              }
            }
          ]
        }
      }
    },
    "snapshots": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^.+$": {
          "oneOf": [
            {
              "type": "object",
              "required": [
                "type",
                "repository"
              ],
              "properties": {
                "type": {
                  "const": "create"
                },
                "repository": {
                  "type": "string",
                  "pattern": "^.+$"
                },
                "architectures": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }, {
              "type": "object",
              "required": [
                "type",
                "mirror"
              ],
              "properties": {
                "type": {
                  "const": "create"
                },
                "mirror": {
                  "type": "string",
                  "pattern": "^.+$"
                },
                "architectures": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }, {
              "type": "object",
              "required": [
                "type",
                "sources"
              ],
              "properties": {
                "type": {
                  "const": "merge"
                },
                "sources": {
                  "type": "array",
                  "minItems": 2,
                  "items": {
                    "type": "string",
                    "pattern": "^.+$"
                  }
                },
                "architectures": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "latest": {
                  "type": "boolean"
                },
                "noRemove": {
                  "type": "boolean"
                }
              }
            }, {
              "type": "object",
              "required": [
                "type",
                "source",
                "filter"
              ],
              "properties": {
                "type": {
                  "const": "filter"
                },
                "source": {
                  "type": "string",
                  "pattern": "^.+$"
                },
                "filter": {
                  "type": "string"
                },
                "withDeps": {
                  "type": "boolean"
                },
                "architectures": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          ]
        }
      }
    }
  }
}
