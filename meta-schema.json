{
  "$schema": "https://json-schema.org/draft-07/schema",
  "definitions": {
    "architecture": {
      "type": "string"
    },
    "architectures": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/architecture"
      }
    },
    "component": {
      "type": "string"
    },
    "components": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/component"
      }
    }
  },
  "type": "object",
  "required": [
    "repositories",
    "mirrors",
    "snapshots",
    "publishings"
  ],
  "properties": {
    "repositories": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "architectures": {
            "$ref": "#/definitions/architectures"
          },
          "component": {
            "$ref": "#/definitions/component"
          },
          "distribution": {
            "type": "string"
          },
          "comment": {
            "type": "string"
          }
        }
      }
    },
    "mirrors": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "archive": {
            "type": "string"
          },
          "distribution": {
            "type": "string"
          },
          "components": {
            "$ref": "#/definitions/components"
          },
          "architectures": {
            "$ref": "#/definitions/architectures"
          },
          "filter": {
            "type": "string"
          },
          "filterWithDeps": {
            "type": "boolean"
          },
          "withSources": {
            "type": "boolean"
          },
          "withUdebs": {
            "type": "boolean"
          }
        }
      }
    },
    "publishings": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {
            "type": "object",
            "required": [
              "snapshot"
            ],
            "properties": {
              "snapshot": {
                "type": "string"
              },
              "components": {
                "$ref": "#/definitions/components"
              }
            }
          }, {
            "type": "object",
            "required": [
              "repository"
            ],
            "properties": {
              "repository": {
                "type": "string"
              },
              "components": {
                "$ref": "#/definitions/components"
              }
            }
          }
        ]
      }
    },
    "snapshots": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {
            "type": "object",
            "required": [
              "type",
              "repository"
            ],
            "properties": {
              "type": {
                "const": "create"
              },
              "repository": {
                "type": "string"
              },
              "architectures": {
                "$ref": "#/definitions/architectures"
              }
            }
          }, {
            "type": "object",
            "required": [
              "type",
              "mirror"
            ],
            "properties": {
              "type": {
                "const": "create"
              },
              "mirror": {
                "type": "string"
              },
              "architectures": {
                "$ref": "#/definitions/architectures"
              }
            }
          }, {
            "type": "object",
            "required": [
              "type",
              "sources"
            ],
            "properties": {
              "type": {
                "const": "merge"
              },
              "sources": {
                "type": "array",
                "minItems": 2,
                "items": {
                  "type": "string"
                }
              },
              "architectures": {
                "$ref": "#/definitions/architectures"
              },
              "latest": {
                "type": "boolean"
              },
              "noRemove": {
                "type": "boolean"
              }
            }
          }, {
            "type": "object",
            "required": [
              "type",
              "source",
              "filter"
            ],
            "properties": {
              "type": {
                "const": "filter"
              },
              "source": {
                "type": "string"
              },
              "filter": {
                "type": "string"
              },
              "withDeps": {
                "type": "boolean"
              },
              "architectures": {
                "$ref": "#/definitions/architectures"
              }
            }
          }
        ]
      }
    }
  }
}
